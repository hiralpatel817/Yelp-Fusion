<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/textColorHeader</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthorTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_author</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/textColorContent</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>
</resources>
